[core]
	editor = nvim

[merge]
	tool = nvimdiff

[alias]
	batdiff = !git diff --name-only --relative --diff-filter=d | xargs batcat --diff
	amend = commit --amend

[url "git@gitlab.com:"]
	insteadOf = "gl:"
	pushInsteadOf = "gitlab:"

[url "git@github.com:"]
	insteadOf = "gh:"
	pushInsteadOf = "github:"

[init]
	defaultBranch = main

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
